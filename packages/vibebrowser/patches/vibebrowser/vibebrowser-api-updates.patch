+    // No properties, just log with extension ID
+    VibeBrowser_metrics::VibeBrowserMetrics::Log(prefixed_event, {
+      {"extension_id", base::Value(extension_id())}
+    });
+  }
+  
+  // Return void callback
+  return RespondNow(NoArguments());
+}
