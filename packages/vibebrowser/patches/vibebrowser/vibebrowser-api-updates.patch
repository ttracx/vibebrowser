+void VisualizeInteractionPoint(content::WebContents* web_contents, 
+                               const gfx::PointF& point,
+                               int duration_ms,
+                               float offset_range) {
+  content::RenderFrameHost* rfh = web_contents->GetPrimaryMainFrame();
